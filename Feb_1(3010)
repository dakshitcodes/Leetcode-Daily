class Solution {
public:
    int minimumCost(vector<int>& nums) {

        int n = nums.size();

        int i = 1;

        int min1 = INT_MAX;
        int min2 = INT_MAX;

        while(i < n) {

            if(nums[i] < min1) {
                min2 = min1;
                min1 = nums[i];

            } else if(nums[i] < min2) {
                min2 = nums[i];
            }

            i++;
        }
        
        return nums[0] + min1 + min2;
    }
};
